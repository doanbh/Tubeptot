<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_view_1dp"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/item_list_img_avatar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/doan"
                />
            <TextView
                android:id="@+id/item_list_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/item_list_img_avatar"
                android:text="Hữu Đoàn"
                android:textColor="@color/color_black_small"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_list_txt_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/item_list_img_avatar"
                android:text="3 giây trước"
                />
            <TextView
                android:id="@+id/item_list_txt_title_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_list_img_avatar"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Lorem Ipsum - All the facts - Lipsum generator"
                android:textColor="@color/color_black_small"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/item_list_txt_description_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_list_txt_title_new"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="What is Lorem Ipsum? Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown ..."
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/item_list_ln_list_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_list_txt_description_new"
                android:orientation="horizontal"
                >
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="20dip"-->
                    <!--android:layout_gravity="center_horizontal|bottom"-->
                    <!--android:padding="12dip"-->
                    <!--android:background="#AA000000"-->
                    <!--android:textColor="#ffffffff"-->
                    <!--android:text="Golden Gate" />-->
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/color_view_1dp"
            ></View>
    </LinearLayout>
</RelativeLayout>